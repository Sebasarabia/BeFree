{
  "expo": {
    "name": "befree-app",
    "slug": "befree-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    /* ---- iOS --------------------------------------------------------- */
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "YOUR_IOS_GOOGLE_MAPS_KEY"
      }
    },

    /* ---- Android ----------------------------------------------------- */
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDbfkiosjTvQ7kF4sxqsH8TxgIS-w88BYU"
        }
      },
      "edgeToEdgeEnabled": true
    },

    /* ---- Web --------------------------------------------------------- */
    "web": {
      "favicon": "./assets/favicon.png"
    },

    /* ---- Claves compartidas ----------------------------------------- */
    "extra": {
      "googlePlacesApiKey": "YOUR_PLACES_KEY"
    }
  }
}
